{
  "manifest_version": 3,
  "name": "Discord DM Downloader",
  "version": "1.0.0",
  "description": "Download Discord direct messages in HTML format with automatic scrolling",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://discord.com/*",
    "https://*.discord.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://discord.com/*",
        "https://*.discord.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
